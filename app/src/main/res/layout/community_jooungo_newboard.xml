<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D5D5D5"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_jooungo_newboard_calcle"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:text="취소"/>

        <Button
            android:id="@+id/btn_jooungo_newboard_check"
            android:background="#1DDB16"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:text="등록"/>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#F15F5F"
                    android:textSize="15dp"
                    android:text="가격"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edit_jooungo_newboard_price"
                    android:singleLine="true"
                    android:numeric="integer"
                    android:maxLength="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:layout_marginRight="3dp"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textColor="#FF0000"
                    android:hint="가격 입력"/>

                <Spinner
                    android:background="@drawable/background_img_add"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:id="@+id/Jooungo_newboard_spiner"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="게시판 제목"/>
                <EditText
                    android:id="@+id/edit_jooungo_newboard_title"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_border"
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:hint="제목 입력"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:text="게시판 내용"/>
                <EditText
                    android:gravity="left"
                    android:id="@+id/edit_jooungo_newboard_contents"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/layout_border"
                    android:padding="10dp"
                    android:textSize="13dp"
                    android:hint="게시판 내용 입력"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_text_jooungo_addimg1"
                    android:textSize="20dp"
                    android:text="사진 추가"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_img_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/btn_text_jooungo_addimg2"
                    android:textSize="20dp"
                    android:text="사진 추가"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_img_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/btn_text_jooungo_addimg3"
                    android:textSize="20dp"
                    android:text="사진 추가"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_img_add"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

        </LinearLayout>


</LinearLayout>