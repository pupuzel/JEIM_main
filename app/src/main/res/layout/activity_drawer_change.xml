<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue">

        <TextView
            android:id="@+id/password_txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:drawableLeft="@drawable/ic_arrow_back_white"
            android:drawableStart="@drawable/ic_arrow_back_white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="비밀번호 변경"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="정보보호를 위해 주기적인 \n암호변경을 하시는것을 권장합니다"
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/passfind_edit_mypass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLength="20"
        android:hint="현재 비밀번호를 입력해주세요"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_bd_gray_radius"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/passfind_edit_chagepass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLength="20"
        android:hint="변경할 비밀번호를 입력하세요"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_bd_gray_radius"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:inputType="textPassword"
        android:id="@+id/passfind_edit_chagepass_check"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLength="20"
        android:hint="변경할 비밀번호를 재입력하세요"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_bd_gray_radius"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_margin="5dp"
        android:id="@+id/passfind_btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_check"
        android:text="변경 하기"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold"
        />
</LinearLayout>