<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- 네비게이션 부분 레이아웃 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue">

        <TextView
            android:id="@+id/jooungo_homeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_back_white"
            android:drawableStart="@drawable/ic_arrow_back_white"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="중고나라"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/textView9" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- 버튼 부분 레이이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_junggo_buy"
                    android:text="삽니다" />


                <Button
                    android:id="@+id/btn_sell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/btn_buy"
                    android:layout_alignBottom="@+id/btn_buy"
                    android:layout_marginLeft="0dp"
                    android:layout_toEndOf="@+id/btn_buy"
                    android:layout_toRightOf="@+id/btn_buy"
                    android:layout_weight="1"
                    android:background="@drawable/bg_junggo_sell"
                    android:text="팝니다" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btn_jooungo_newboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_newboard0"
                    android:gravity="center"
                    android:paddingRight="10dp"/>


                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:layout_marginRight="3dp"
                    android:background="@color/gray" />

                <TextView
                    android:id="@+id/btn_search_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:drawableRight="@drawable/pluszoom"
                    android:paddingRight="9dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/jooungo_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1.4">
            <!-- 검색 부분 레이아웃 -->

            <Button
                android:id="@+id/Jooungo_btn_spinner"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="0.5"
                android:text="전체"
                android:background="@drawable/bg_white_bd_black"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="3dp" />

            <EditText
                android:id="@+id/edit_jooungo_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.3"
                android:background="@drawable/bg_white_bd_black"
                android:hint="검색할 내용을 입력하세요"
                android:paddingLeft="3dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/btn_jooungo_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.6"
                android:background="@drawable/bg_white_bd_black"
                android:drawableLeft="@drawable/ic_search"
                android:drawableStart="@drawable/ic_search"
                android:paddingLeft="7dp" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_gravity="top"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/black" />
    </LinearLayout>

    <!-- 게시판 리스트뷰 -->

    <ListView
        android:id="@+id/jooungo_listview_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:dividerHeight="10dp"
        android:divider="#ffffff"
        android:visibility="gone">
    </ListView>


    <!-- 바텀 부분 -->
    <ListView
        android:id="@+id/jooungo_listview_sell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_whitealpha">
        <include
            layout="@layout/bottom_bar" />

    </LinearLayout>

</LinearLayout>