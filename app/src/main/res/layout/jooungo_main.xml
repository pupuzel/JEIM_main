<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- 네비게이션 부분 레이아웃 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue">

        <TextView
            android:id="@+id/jooungo_homeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_back_black"
            android:drawableStart="@drawable/ic_arrow_back_black"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="중고나라"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/textView9" />

        <TextView
            android:id="@+id/btn_jooungo_newboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:drawableRight="@drawable/ic_newboard"
            android:gravity="center"/>
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <!-- 버튼 부분 레이이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/btnclike"
                android:text="삽니다"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/btn_sell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/btncliked"
                android:text="팝니다"
                android:layout_alignBaseline="@+id/btn_buy"
                android:layout_alignBottom="@+id/btn_buy"
                android:layout_toRightOf="@+id/btn_buy"
                android:layout_toEndOf="@+id/btn_buy"
                android:layout_weight="1"/>



        </LinearLayout>


        <!-- 검색 부분 레이아웃 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:gravity="center">

            <Spinner
                android:id="@+id/Jooungo_spiner_list"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:background="@drawable/bg_white_bd_black"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/edit_jooungo_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="0.13"
                android:background="@drawable/bg_white_bd_black"
                android:hint="검색할 내용을 입력하세요"
                android:singleLine="true"
                android:textSize="15dp"
                android:paddingTop="3dp"/>

            <TextView
                android:id="@+id/btn_jooungo_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.87"
                android:background="@drawable/bg_white_bd_black"
                android:drawableLeft="@drawable/ic_search"
                android:drawableStart="@drawable/ic_search" />

        </LinearLayout>
    </LinearLayout>
    <!-- 게시판 리스트뷰 -->

    <ListView
        android:id="@+id/jooungo_listview_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:dividerHeight="10dp"
        android:divider="#ffffff"
        android:visibility="gone">
    </ListView>


    <!-- 바텀 부분 -->
    <ListView
        android:id="@+id/jooungo_listview_sell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:dividerHeight="2dp"
        android:background="@color/white">

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_whitealpha">
        <include
            layout="@layout/bottom_bar" />

    </LinearLayout>

</LinearLayout>