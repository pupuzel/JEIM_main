<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5D5D5">

    <LinearLayout
        android:background="@drawable/layout_border_black"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:drawableLeft="@drawable/ic_play_arrow_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="타이틀 제목을 입력"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/faq_title"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fffffF"
        android:id="@+id/faq_layout_contents"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:padding="5dp"
            android:id="@+id/faq_content"
            android:text=""/>

    </LinearLayout>

</LinearLayout>