<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/community_food_menu_listview_notice_layout"
    android:layout_margin="5dp">
    <!--  제목,주소,분류 레이아웃 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/community_food_menu_listview_txt_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:text="MenuName"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:textStyle="bold"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/community_food_menu_listview_txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="end"
            android:text="MenuPrice"
            android:textColor="@color/actiontopbar"
            android:textSize="15dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#777777"
        android:layout_marginTop="7dp"/>
</LinearLayout>

