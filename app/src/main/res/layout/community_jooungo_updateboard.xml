<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D5D5D5"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_jooungo_updateboard_calcle"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:text="취소"/>

        <Button
            android:id="@+id/btn_jooungo_updateboard_check"
            android:background="#1DDB16"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentRight="true"
            android:text="완료"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="가격"
                android:textColor="#F15F5F"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/edit_jooungo_updateboard_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/layout_border"
                android:hint="가격 입력"
                android:maxLength="8"
                android:numeric="integer"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#FF0000"
                android:textSize="15dp" />

            <Spinner
                android:id="@+id/Jooungo_updateboard_spiner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/background_img_add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시판 제목"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_jooungo_updateboard_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_border"
                android:hint="제목 입력"
                android:padding="10dp"
                android:singleLine="true"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시판 내용"
                android:textColor="#000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/edit_jooungo_updateboard_contents"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/layout_border"
                android:gravity="left"
                android:hint="게시판 내용 입력"
                android:padding="10dp"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_text_jooungo_updateimg1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_img_add"
                android:gravity="center"
                android:text="사진 추가"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btn_text_jooungo_updateimg2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_img_add"
                android:gravity="center"
                android:text="사진 추가"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/btn_text_jooungo_updateimg3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_img_add"
                android:gravity="center"
                android:text="사진 추가"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>