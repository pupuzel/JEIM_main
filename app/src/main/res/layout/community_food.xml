<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Food.FoodActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

  <!--상단-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff5e00">

        <TextView
            android:id="@+id/backhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:drawableStart="@drawable/ic_arrow_back" />

        <Button
            android:id="@+id/button"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:background="#ff5e00"
            android:text="전체보기"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/backhome"
            android:layout_toEndOf="@+id/backhome"
            android:layout_marginStart="24dp" />

        <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="35dp"
            android:layout_marginRight="35dp"
            android:background="#ff5e00"
            android:text="즐겨찾기 보기"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <!--중단-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ff5e00"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/community_food_order"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff5e00"
            android:drawableRight="@drawable/ic_arrow_drop_down"
            android:text="정렬"
            android:textColor="#ffffff"
            android:entries="@array/Food"/>

        <Button
            android:id="@+id/community_btn_food_map"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ff5e00"
            android:text="지도"
            android:textColor="#ffffff" />

    </LinearLayout>

    <!-- 텍스트 뷰 -->
    <ListView
        android:id="@+id/community_food_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:background="#ffffff" />

    <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="신장 개업!"
                android:textSize="15dp"
                android:padding="5dp"
                android:gravity="center"
                android:background="#EAEAEA"/>

        </LinearLayout>


</LinearLayout>

    <!-- Bottom sheet -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#F6F6F6"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="300dp"
        app:layout_behavior="@string/bottom_sheet_behavior">


        <!--Bottom sheet header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00D8FF"
            android:layout_marginBottom="10dp">

            <TextView
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/community_food_order_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/ic_clear_black_24dp"
                android:drawableStart="@drawable/ic_clear_black_24dp" />

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/community_food_order_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:text="확인"
                android:textSize="20dp" />

        </RelativeLayout>

        <!--Bottom sheet section-->
        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="#000000"
                android:text="거리순"/>

            <TextView
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가까운 거리순"
                android:layout_alignBottom="@+id/community_food_order_box_distance"
                android:layout_alignParentTop="true" />

            <CheckBox
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/community_food_order_box_distance" />

        </RelativeLayout>
        <!-- 구분선 -->
        <View
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_centerInParent="true"/>

        <!--Bottom sheet section-->


        <!--Bottom sheet section-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                android:text="배달가능"
                android:textColor="#000000"
                android:textSize="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/community_food_order_box_delivery"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="배달 가능점" />

            <CheckBox
                android:layout_marginRight="10dp"
                android:id="@+id/community_food_order_box_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true" />

        </RelativeLayout>


        <!-- 구분선 -->
        <View
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDBDBD"
            android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_alignParentLeft="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="#000000"
                android:text="리뷰순"/>

            <TextView
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="리뷰 많은순"
                android:layout_alignBottom="@+id/community_food_order_box_review"
                android:layout_alignParentTop="true" />

            <CheckBox
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/community_food_order_box_review" />

        </RelativeLayout>



    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>