<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_radius">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/major_board_review_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_margin="10dp"
            android:background="@drawable/ic_arrow_back_black" />

        <TextView
            android:id="@+id/major_board_review_txt_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:text="댓글 0개" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/major_board_review_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="250dp">
        <ListView
            android:id="@+id/major_board_review_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#ffffff" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:layout_weight="5">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerInParent="true"
            android:layout_gravity="top"
            android:layout_marginRight="3dp"
            android:background="@color/btnclike" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <EditText
                android:id="@+id/major_board_review_edit_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="댓글을 입력하여 주세요"
                android:background="@drawable/bg_whitealpha"
                android:textColorHint="@color/mainbackground"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:singleLine="true"
                android:maxLength="100"
                android:gravity="left|center"
                android:layout_marginRight="3dp"/>

            <Button
                android:id="@+id/major_board_review_btn_cheak"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="9"
                android:background="@drawable/bg_radius"
                android:gravity="center"
                android:text="등록"
                android:textColor="@color/black"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>