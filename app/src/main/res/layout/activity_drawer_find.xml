<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue">

        <TextView
            android:id="@+id/password_txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView9"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:drawableLeft="@drawable/ic_arrow_back_white"
            android:drawableStart="@drawable/ic_arrow_back_white" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="비밀번호 찾기"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입시 입력했던 아이디(학번)를 입력해주세요 \n 이메일로 임시비밀번호를 발송해드립니다."
        android:textColor="@color/black"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/password_edit_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:maxLength="10"
        android:hint="아이디(학번)을 입력해주세요"
        android:gravity="center_vertical"
        android:background="@drawable/bg_white_bd_gray_radius"/>

    <Button
        android:layout_margin="5dp"
        android:id="@+id/password_btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/click_check"
        android:text="비밀번호 찾기"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:textStyle="bold" />
</LinearLayout>