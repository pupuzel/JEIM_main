<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue"
        android:padding="5dp">

        <TextView
            android:id="@+id/department_key_apply_txt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="301호 키"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/department_key_apply_txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OOO 님이 열쇠를\n소유하고 있습니다"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/whitegray"
            android:padding="10dp"
            android:background="@color/colorPrimary"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.3" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/department_key_apply_btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화걸기"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@color/navy"
            android:layout_weight="1"/>

        <Button
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/department_key_apply_btn_apply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인수신청"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="@color/white"
            android:background="@color/navy"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>