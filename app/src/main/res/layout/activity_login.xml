<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navyblue">

    <!-- 상단 로고 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/jeiurogo" />


    </LinearLayout>

    <!-- 로그인 부분 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="재능마당"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/idtext"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/click_login_bar"
            android:drawableLeft="@drawable/ic_logni_person"
            android:drawableStart="@drawable/ic_logni_person"
            android:hint="학번"
            android:maxLength="10"
            android:numeric="integer"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/passwdtext"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/click_login_bar"
            android:drawableLeft="@drawable/ic_login_password"
            android:drawableStart="@drawable/ic_login_password"
            android:hint="비밀번호"
            android:inputType="textPassword"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#000000" />


        <Button
            android:id="@+id/btnlogin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/click_login_btn"
            android:text="로그인"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btnjoin"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="회원 가입"
            android:textColor="#ff0000"
            android:textSize="14dp" />

    </LinearLayout>


</LinearLayout>