<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_weight="1"
        android:background="@color/navyblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/openbook"
                    android:text="  도서마당"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:gravity="center_vertical"
                    android:padding="5dp"/>
                <Spinner
                    android:id="@+id/Library_search_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/bg_white_bd_black"
                    android:layout_toLeftOf="@+id/Library_search_btn"
                    android:layout_centerVertical="true"/>
                <Button
                    android:id="@+id/Library_search_btn"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="검색"
                    android:background="@drawable/click_check"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
        </RelativeLayout>

        <EditText
            android:drawableLeft="@drawable/ic_search"
            android:id="@+id/Library_search_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:maxLength="50"
            android:singleLine="true"
            android:hint="내용을 입력해주세요"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_white_bd_gray_radius"/>
    </LinearLayout>

    <!-- 내용 -->
    <RelativeLayout
        android:layout_weight="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ListView
                android:id="@+id/Library_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="10dp"
                android:divider="#ffffff">
            </ListView>
            <ProgressBar
                android:id="@+id/Library_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>
    </RelativeLayout>

    <!-- 푸터메뉴 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_whitealpha">
            <include layout="@layout/bottombar" />
    </LinearLayout>
</LinearLayout>