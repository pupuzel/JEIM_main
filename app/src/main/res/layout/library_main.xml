<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 헤더 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/navyblue"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_arrow_back_black"
                android:layout_gravity="center"
                android:gravity="left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:drawableLeft="@drawable/book"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:paddingLeft="60dp"
                android:text="  도서마당"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="11"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/navyblue">

            <Spinner
                android:id="@+id/Library_search_spinner"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/Library_search_btn"
                android:layout_weight="4"
                android:background="@drawable/bg_white_radius"
                android:gravity="center" />
            1

            <EditText
                android:id="@+id/Library_search_edit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@drawable/bg_white_radius"
                android:gravity="left|center"
                android:paddingLeft="5dp"
                android:hint="내용을 입력해주세요"
                android:maxLength="50"
                android:singleLine="true"
                android:textSize="15dp" />

            <Button
                android:id="@+id/Library_search_btn"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="5dp"
                android:layout_weight="5"
                android:background="@drawable/bg_radius"
                android:drawableRight="@drawable/search"
                android:gravity="center"
                android:paddingRight="3dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- 내용 -->
    <RelativeLayout
        android:layout_weight="100"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/Library_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="10dp"
            android:divider="#ffffff">
        </ListView>
        <ProgressBar
            android:id="@+id/Library_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <!-- 푸터메뉴 레이아웃 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_whitealpha">
        <include layout="@layout/bottombar" />
    </LinearLayout>
</LinearLayout>