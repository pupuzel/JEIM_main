<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 네비게이션 부분 레이아웃 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue">

        <TextView
            android:id="@+id/jooungo_homeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_arrow_back_white"
            android:drawableStart="@drawable/ic_arrow_back_white"
            android:layout_marginLeft="11dp"
            android:layout_alignTop="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:text="중고나라"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            android:id="@+id/textView9" />

    </RelativeLayout>


    //메뉴

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        //1번째 탭탭
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:id="@+id/btn_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/navyblue"
                android:drawableLeft="@drawable/rightarrow"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="   학과 소식"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/search_view1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/button24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="50dp"
                    android:text="공지사항"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="50dp"
                    android:text="학과일정"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>

        //2번째 탭
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_community"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/navyblue"
                android:drawableLeft="@drawable/rightarrow"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="   커뮤니티"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/search_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="50dp"
                    android:text="자유 게시판"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>


        //3번째 탭
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_keyadmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/navyblue"
                android:drawableLeft="@drawable/rightarrow"
                android:gravity="left|center"
                android:paddingLeft="10dp"
                android:text="   열쇠 수불 대장"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/search_view3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="50dp"
                    android:text="302호"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="50dp"
                    android:text="303호"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="50dp"
                    android:text="304호"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:gravity="left|center"
                    android:paddingLeft="50dp"
                    android:text="305호"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="top"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>